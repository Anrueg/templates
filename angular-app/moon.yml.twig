$schema: "https://moonrepo.dev/schemas/project.json"

id: "angular/{{ name }}"

project:
  name: "{{ name }}"
  description: "Angular applicaton: {{ name }}"

type: application
stack: frontend
language: typescript
tags: [angular, angular-app, app, scss]

fileGroups:
  sources:
    - "src/**/*.{ts,tsx}"

  assets:
    - "assets/**/*"

  configs:
    - eslint.config.ts
    - jest.config.ts
    - ngsw-config.json
    - tsconfig.json
    - tsconfig.*.json
    - package.json
    - ng-config.json

toolchain:
  default: {{ frontend_toolchain }}
