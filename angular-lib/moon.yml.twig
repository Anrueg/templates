$schema: "https://moonrepo.dev/schemas/project.json"

id: "angular/{{ name }}"

project:
  name: "{{ name }}"
  description: "Angular library: {{ name }}"

type: library
stack: frontend
language: typescript
tags: [angular, angular-lib, scss]

fileGroups:
  sources:
    - "src/**/*.{ts,tsx}"

  assets:
    - "assets/**/*"

  configs:
    - eslint.config.ts
    - jest.config.ts
    - ngsw-config.json
    - tsconfig.json
    - tsconfig.*.json
    - package.json
    - ng-config.json
    - ng-package.json

toolchain:
  default: "{{ frontend_toolchain }}"
